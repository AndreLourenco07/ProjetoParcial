<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#F5F5F5">

    <!-- Ícone da categoria (círculo cinza com ícone) -->
    <ImageView
        android:id="@+id/ivIconeCategoria"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_icone_produto"
        android:background="@drawable/ic_circle_background"
        android:padding="8dp"
        android:contentDescription="Ícone da categoria"
        android:scaleType="centerInside" />

    <!-- Nome da categoria -->
    <TextView
        android:id="@+id/txtHeaderCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="Categoria"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</LinearLayout>