<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/minhaImagem"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="top"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/logotipo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="918dp"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:id="@+id/textAcesse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acesse sua Conta"
                    android:textColor="@android:color/black"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="email"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_background"
                    android:hint="seuemail@mail.com"
                    android:inputType="textEmailAddress"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textsenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="senha"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/senhaInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_background"
                    android:hint="******"
                    android:inputType="textPassword"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnAcessar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/ic_button_acessar"
                    android:text="Acessar"
                    android:textColor="@android:color/white" />


                <Button
                    android:id="@+id/btnCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_button_cadastrar"
                    android:backgroundTint="@null"
                    android:padding="12dp"
                    android:text="Criar Conta"
                    android:textColor="@color/system" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>